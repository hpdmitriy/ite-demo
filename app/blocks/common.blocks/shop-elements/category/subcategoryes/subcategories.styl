.subcategoryes
  lost-utility clearfix
  &__list
    > *
      lost-column: 1/5 5 10px;
      background-color #e8e8e8
      height 60px
      line-height 60px
      margin-bottom: 10px
      padding-left: 15px
      padding-right: 15px
      border:solid 1px $wt
      color #495057
      position: relative
      +mq-max('md')
        lost-column: 1/3 3 10px;
      +mq-max('sm')
        lost-column: 1/1 1 0px;
        margin-bottom: 0px
        display: none
      &.current
        background: $wt
        //border-color #14b2cf
        color #14b2cf
        box-shadow: inset 0px 0px 0px 1px rgba(20,178,207,0.99);
        +mq-max('sm')
          display: block
          padding-right 50px
          &:before
            display: block
            size 30px
            position: absolute 10px 10px auto auto
            content '\f107'
            font-family: $awe
            fs 24px
            lh 40px
            text-align: center
      > a
        display: inline-block
        line-height: 1.2
        vertical-align: middle
        color inherit
        font-family $black
        font-size: responsive 14px 16px;
        font-range: 768px 1180px;
        text-transform uppercase
        text-decoration: none
        ^[-1]:hover, .current
               background: $wt
               box-shadow: inset 0px 0px 0px 1px rgba(20,178,207,0.99);
               color #14b2cf
