.property
  margin-bottom: 50px
  +mq-max('sm')
    margin-bottom: 30px
  &__title
    color #495057
    font-family $black
    font-size 18px
    text-transform uppercase
    lh 1.2
    padding-top: 10px
    padding-bottom: 10px
    >.fa
      margin-left: 10px
      float: right
      +mq-min('sm')
        display: none
    +mq-max('sm')
      border-bottom: 1px solid #e0e0e0
      cursor: pointer
  &__values
    margin 15px 0 0 0
    +mq-max('sm')
      display: none

  table
    caption
      font-size 16px
      font-family $black
      text-align: left
      padding 30px 20px 10px
      +mq-max('sm')
        padding 10px 10px 10px
    tr
      +mq-max('sm')
        display: block
        width: 100%

      td
        padding 10px 20px
        vertical-align: middle
        +mq-max('sm')
          display: block
          width: 100%
          padding 10px
          color #495057 !important
      > td:nth-child(1)
        width 70%
        color #959595
        font-family $book
        font-size 16px
        line-height 1.3
      > td:nth-child(2)
        width 30%
        color #495057
        font-family $bold
        font-size 16px
        line-height 1.3
      &:nth-child(odd)
        background-color #fafafa

  ul
    list-style disc
    color black
    font-family $book
    font-size 16px
    line-height 1.3
    margin 0 0 0 20px
    > li
      list-style disc
      margin-bottom: 8px
      padding: 0