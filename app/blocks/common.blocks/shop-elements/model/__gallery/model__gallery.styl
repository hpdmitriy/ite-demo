&__gallery
  lost-column: 1/2 2 2vw;
  +mq-min('md')
    lost-move 1/2
  +mq-max(md)
    display: block !important
    width 100% !important
    float: none !important
    margin 0 0 30px 0 !important
    clear fix
  & + .model__characteristic
    > .property
      margin-bottom: 20px
    +mq-min-max('sm','md')
      margin-bottom: 0 !important
      > .property
        lost-column 1/2 2 30px
        margin-bottom: 0




