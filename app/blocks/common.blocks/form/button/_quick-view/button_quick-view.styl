&_quick-view
  background $tr
  position: absolute
  white-space: nowrap
  border-width: 2px
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius 0
  display: none
  opacity 0
  font-size: responsive 12px 16px;
  font-range: 320px 1180px;
  &:hover
    color $wt
  button-colors($tr, $wt, $wt)
  .picto
    margin-right: 10px