&_figure
  position: relative
  margin-bottom: 50px
  figure
    a
      display: block
      overflow hidden
      border 9px solid #9c978c
      margin-bottom: 10px
    img:not(.image_responsive)
      display: block
      width 100%
      height auto
    +mq-min('md')
      a

        height 220px
    +mq-max('md')
      a
        display: block
        height 200px
    +mq-max('md')
      a
        display: block
        height auto
  .figure
    .image

    &_round
      .image
        border-radius 50%
    &_set-2
      > .image
        lost-column 1/2 2 0px
        +mq-max(md)
          lost-column 1/1 2 0px
          width 100% !important
          &:first-child
            display: none
    &_set-3
       .image
        lost-column 1/3 3 0px
        +mq-max(md)
          lost-column 1/2 3 0px
          &:first-child
            display: none

  figcaption
    lost-utility: clearfix
    clear both
    display: block
    color #2b2b2b
    font-family $black
    font-size: responsive 16px 24px;
    font-range: 320px 1180px;
    line-height 1.2
    text-transform uppercase
    text-align: center
  .figcaption
    & + span
      margin-top: 35px
      display: block
      lost-utility clearfix
    &__desc
      display: block
      color #2b2b2b
      font-size: responsive 14px 18px;
      font-range: 320px 1180px;
      ff $book
      text-transform: none
      padding-top: 25px

      &_hr
        display: block
        color #2b2b2b
        font-size: responsive 14px 18px;
        font-range: 320px 1180px;
        ff $book
        text-transform: none
        margin-top: 17px
        padding-top: 25px
        border-top: solid 1px $c3;

