&_features
  margin-top: 60px
  margin-bottom: 60px
  position: relative
  padding-top: 35px
  padding-bottom: 45px
  background:  url('data:image/png;base64,') 0 0 repeat-x,   #f5f5f5 url('data:image/gif;base64,') -15px 100% repeat-x
  lost-utility clearfix
  +mq-max('sm')
    padding-top: 30px
    padding-bottom: 20px
  .feature
    text-align: center
    padding-left: 10px
    padding-right: 10px
    border-left solid 1px #d7d7d7
    +mq-max('sm')
      border none
      position: static
      min-height: 100px
    &__title
      color #495057
      font-family $black
      font-size: responsive 20px 28px;
      font-range: 320px 767px;
      margin-bottom: 10px
      > span
        border-bottom: solid 1px #f5f5f5
      +mq-max('sm')
        cursor: pointer
        > span
          border-bottom-color: #14b2cf
        &:hover
          color #8d98a3
          border-bottom-color: #f5f5f5
        &.current
          color: #8d98a3
          > span
              border-bottom-color: #f5f5f5

    &__info
      color #14b2cf
      font-family $thin
      font-size: responsive 32px 52px;
      font-range: 767px 1180px;
      +mq-max('sm')
        display: none
        font-size: responsive 40px 58px;
        font-range: 320px 767px;
        position absolute auto 0 25px 0
        text-align: center

    &:first-child
      border-left: none
      +mq-max('sm')
        .feature__title:not(.nocurrent)
          color #8d98a3
          > span
            border-bottom-color: #f5f5f5
        .feature__info
          display: block