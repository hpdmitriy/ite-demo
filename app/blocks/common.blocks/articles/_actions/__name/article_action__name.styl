&__name
  position absolute 0 0 auto auto
  height 90px
  width 33%
  background $tr
  cursor: pointer
  text-align: left
  padding-left: 20px
  padding-right: 20px
  line-height: 90px
  transition: all 250ms ease-in-cubic;
  border-bottom: solid 1px rgba(255, 255, 255, 0.3)
  +mq-max(md)
    width 40%
  +mq-max(sm)
    width 10px
    padding 0
  &:last-child
    border-bottom:none
  &.current ~ *
    display: block !important
    opacity 1 !important
  &.current
    border-bottom-color: $c3
    background $c3
    &:before
        border-color: transparent $c3 transparent transparent;
  &:hover:not(.current)
    background rgba(255, 255, 255, 0.3)
    &:before
      border-color: transparent rgba(255, 255, 255, 0.3) transparent transparent;
  > span
    display: inline-block
    line-height: 1.2
    font-size: responsive 14px 16px;
    font-range: 420px 1280px;
    color $wt
    ff $medium
    vertical-align middle
    +mq-max('sm')
      display: none
  &:before
    transition: all 250ms ease-in-cubic;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 45px 20px 45px 0;
    border-color: transparent transparent transparent transparent;
    position absolute 0 auto 0 -20px
    content ""

&:nth-child(1)
  .article_action__name
    top 0
    z-index 4
&:nth-child(2)
  .article_action__name
    top 90px
    z-index 3
&:nth-child(3)
  .article_action__name
    top 180px
    z-index 2
&:nth-child(4)
  .article_action__name
    top 270px
    z-index 1
> *:not(.article_action__name) {
  display: none
  opacity 0
}
  &.current
    display: block !important
    opacity 1 !important