&_serve
  nav
    position: relative
    z-index 1
    ul
      display block
      lost-utility clearfix
      &:before
        display: block
        z-index -1
        content ''
        height 70px
        border-radius 35px
        position: absolute 0  0 auto 0
        background-color #ddd
        +mq-max('sm')
          height 50px
          border-radius 25px
      li
        lost-column 1/6 6 20px
        margin 0
        position: relative
        z-index 1
        -webkit-flex none
        flex none
        border: none
        background $tr
        +mq-max('sm')
          lost-column 1/6 6 3px
        > a
          transition: all 250ms ease-in-cubic;
          text-decoration: none
          white-space normal
          text-align: left
          padding 7px
          +mq-max('sm')
            padding 6px 0 6px 6px
          &:hover, &:focus
            i
              background-image none
              background-color #fc847b
              box-shadow 0 5px 5px rgba(202, 41, 29, 0.17)
              cl $wt
            b
              color #fc847b

          i
            display: block
            size 56px
            background-color #c9c9c9
            background-image linear-gradient(to top, #c9c9c9 0%, #b2b2b2 100%)
            box-shadow inset 0 5px 5px rgba(0, 0, 0, 0.1), 0 1px 0 rgba(245, 245, 245, 0.75)
            border-radius 50%
            color #ec4a3d
            font-family $bold
            font-size 31px
            line-height 56px
            text-align: center
            font-style normal
            margin-bottom: 20px
            +mq-max('sm')
              size 37px
              font-size 22px
              line-height 37px
          b
            display: block
            color #495057
            font-family $bold
            font-size 16px
            font-weight normal
            line-height 1.3
            +mq-max('sm')
              display: none
        &.tabs__item_current
          > a
            i
              background-image linear-gradient(to top, #ec4a3d 0%, #ec4a3d 100%)
              box-shadow 0 5px 5px rgba(202, 41, 29, 0.17)
              cl $wt
            b
              color #ec4a3d
  .tabs__wrap
    lost-utility clearfix

  .tabs__content
    lost-utility clearfix