  .link
    text-decoration: none
    display: inline-block
    padding: 0 10px
    font-family: $medium
    position: relative
    &:first-child
      display: none
    +mq-max-orient('md', portrait)
      span
        display: none
    +mq-max-orient('sm', portrait)
      padding: 0 3px
      span
        display: inline-block

    &:first-child:before
      position: absolute -1px 0 1px auto
      width 2px
      background $mc
      content ""
      +mq-max(sm)
        width 1px
  .image
    &.video
      max-width 1.5em
    &.pdf
      max-width 2.2em
    position: relative
    display: inline-block
    vertical-align: middle
    top -2px
    margin-left: 3px
    margin-right: 3px
