&_gallery
  background-color #eaeaea
  lost-utility clearfix
  margin-bottom: 80px
  +mq-max('sm')
    margin-bottom: 20px
  +mq-min('lg')
    padding 0
  +mq-max('lg')
    @extend .grid__row
.gallery
  &__set
    lost-column 5/10 2 0px
    margin-bottom: 0

    > .figure
      lost-masonry-wrap: no-flex 0px;
      > *
        lost-masonry-column: 1/5 0px no-flex;
        +mq-max('lg')
          lost-masonry-column: 1/3 0px no-flex;
          &:nth-child(1)
            display none
          &:nth-child(2)
            display none
          &:nth-child(6)
            display none
          &:nth-child(7)
            display none
        +mq-max('md')
            lost-masonry-column: 1/2 0px no-flex;
            &:nth-child(3)
              display none
            &:nth-child(8)
              display none
  &__desc
    lost-column 3/10 3 0px
    padding 60px 0 0px 50px
    +mq-max('sm')
      padding 30px 0 20px 0px
    p
      font-size: responsive 14px 18px;
      font-range: 320px 1180px;
      ff $book
      text-transform: none

    h2
      color #2b2b2b
      font-family $black
      margin-top: 0
      font-size: responsive 16px 24px;
      font-range: 320px 1180px;
      line-height 1.2
      text-transform uppercase
      text-align: left
      margin-bottom: 5%
    +mq-max('lg')
      lost-column 2/4 2 0px