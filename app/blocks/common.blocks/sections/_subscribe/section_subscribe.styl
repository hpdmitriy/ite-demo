&_subscribe
  background-color #2d2d2d
  margin-top: 20px
  padding-top: 10px
  +mq-max('md')
    margin-top: 20px

.subscribe
  clear fix
  &__title
    lost-column 2.7/10 3 20px
    color white
    ff $cond
    font-size 12px
    text-transform uppercase
    line-height: 1.3
    padding-top: 5px
    padding-bottom: 5px
    +mq-max('md')
      margin-bottom: 5px !important
  &__form
    lost-column 6.1/10 3 20px
    +mq-max('md')
      lost-column 8/10 3 20px
    +mq-max('sm')
      margin-bottom: 0 !important
    .input
      lost-column:4.35/6 2 10px
      line-height: 12px !important
      padding-top: 10px
      margin-bottom: 0 !important
      +mq-max('sm')
        lost-column:3.5/6 2 10px
    .button
      lost-column:1.65/6 2 10px
      line-height: 12px !important
      padding 15px 0px !important
      +mq-max('sm')
        lost-column:2.5/6 2 10px
  &__social
    lost-column 1.2/10 3 20px
    +mq-max('md')
      lost-column 2/10 3 20px
    +mq-max('sm')
      display: none !important
    text-align: right
    .button
      button-colors($wt, #547096, $wt)
      line-height: 38px
      fs 20px
      width 40px
      padding:0
      text-align: center
      &:first-child
        margin-right: 10px
    .fa-vk
      color #547096;
    .fa-facebook
      color #395797