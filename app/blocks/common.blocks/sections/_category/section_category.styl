.category
  &_build
    margin-top: 70px
    background: $tr url('../images/template/build.jpg') 0 0 repeat
    padding-bottom: 30px
  &_building
    background: $tr url('../images/template/building-texture.jpg') 0 0 no-repeat
    background-size: cover
  &_tools
    margin-top: 70px
    padding-bottom: 70px
  &__title
    width: 100%
    color black
    font-size 44px
    ff $black
    line-height 41px
    text-transform uppercase
    text-align: center
    letter-spacing: 0.1em
    margin-bottom: 30px
  &__description
    color black
    font-size 20px
    text-align: center
    line-height: 1.3
    margin-bottom: 50px
  &__set
    &_flex
      lost-masonry-wrap: flex 40px;
    lost-utility clearfix
    &_col-3-2-1
      > *
        lost-column 1/3 3 35px
      +mq-max('md')
        > *
          lost-column 1/2 2 40px
    &_col-4-3-1
      > *
        lost-column 1/4 4 20px
      +mq-max('md')
        > *
          lost-column 1/3 3 20px

.category_mp
  .category__title
    text-align: left

