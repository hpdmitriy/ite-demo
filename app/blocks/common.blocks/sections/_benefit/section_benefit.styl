&_benefit
  margin-top: 70px
  +mq-max('md')
    margin-top: 20px

.benefit
  &__item
    lost-column 1/4 4 30px
    min-height 90px
    for bg, index in $c3 $c5 $c2 $c4
      &:nth-child({index+1})
        background: bg
    .link
      padding-top: 25px
      padding-left: 93px
      color #2e2e2e
      ff $bold
      animation-name none;
      text-decoration: none
      ^[-1]:hover
        -webkit-filter: contrast(1.3);
        filter: contrast(1.3);
      .picto
        top 16px
        left: 11px
  +mq-max('md')
    &__item
      lost-column 1/4 4 20px
      height 180px
      padding 0 20px
      .link
        display: block
        padding: 0px
        fs 16px
        line-height: 1.5
        .picto
          position static
          display: block
          margin 25px auto
  +mq-max('sm')
    &__item
      lost-column 1/2 2 2px
      margin-bottom: 2px
      height 145px
      .link
        line-height: 1.2
        .picto
          margin 10px auto