&_search
  padding-top: 15px
  min-height:75px
  padding-bottom: 15px
  .menu
    &-item
      &:nth-child(1)
        lost-column: 2/9 4 0px;
      &:nth-child(2)
        lost-column: 2/9 4 0px;
      &:nth-child(3)
        lost-column: 2/9 4 0px;
      &:nth-child(4)
        lost-column: 3/9 4 0px;
      +mq-max('sm')
        &:nth-child(1)
          lost-column: 1/3 3 0px;
        &:nth-child(2)
          lost-column: 1/3 3 0px;
        &:nth-child(3)
          lost-column: 1/3 3 0px;
        &:nth-child(4)
          padding-top: 20px
          position: relative !important
          clear both !important
      .link
        padding-top: 10px
        color #818181
        font-family $book
        font-size 14px
        font-weight 400
        lh 1.2
        text-decoration: none
        +mq-max('sm')
          word-wrap break-word
          hyphens auto

        +mq-max('md')

          padding-left: 0
          .picto
            position: relative
            display: block