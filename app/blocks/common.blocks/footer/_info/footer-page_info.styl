&_info
  padding-top: 0.5em
  lost-utility clearfix
  > *
    //line-height: 1
    //lost-column 3/8 3 30px
  > .footer-page__copyright
      text-align: left
      //lost-column 3/8 3 30px
      lost-column 5/11 3 0px
      font-size 0.9em
      +mq-max('sm')
        lost-column 5/11 3 0px
  > .footer-page__locale
      text-align: center
      font-size: 20px
      //lost-column 2/8 3 30px
      lost-column 1/11 3 0px
      +mq-max('md')
        //font-size: responsive 16px 20px;
        //font-range: $breakpoints.sm $breakpoints.md;
      +mq-max('sm')
        lost-column 1/11 3 0px
        text-align: right
        display none
      strong
        font-family: $black
  > .footer-page__phones
      text-align: right
      font-size: 1.1em
      lost-column 5/11 3 0px
      //lost-column 3/8 3 30px
      //+mq-max('md')
      //  font-size: responsive 18px 22px;
      //  font-range: $breakpoints.sm $breakpoints.md;
      +mq-max('sm')
        lost-column 5/11 3 0px
  > .footer-page__tools
    font-size 0.9em
    text-align: right
    //lost-column 3/8 3 30px
    lost-column 5/11 3 0px
    +mq-max('md')
      lost-column 5/11 3 0px
    .tools
        //height 23px
        //line-height: 23px
        //+mq-max('lg')
        //  span
        //    display: none

    .link
      text-decoration: none
      display: inline-block
      padding: 0 10px
      font-family: $medium
      position: relative
      &:first-child
        display: none
      //+mq-max-orient('md', portrait)
      //  span
      //    display: none
      +mq-max-orient('sm', portrait)
        padding: 0 3px
        span
          display: none
      &:first-child:before
        position: absolute 1px 0 1px auto
        width 2px
        background $mc
        content ""
        +mq-max(sm)
          width 1px
      .image
        &.video
          max-width 1.5em
        &.pdf
          max-width 2.2em
        position: relative
        display: inline-block
        vertical-align: middle
        top -2px
        margin-left: 3px
        margin-right: 3px
